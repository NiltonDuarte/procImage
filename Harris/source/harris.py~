class MyImg:
	def __init__(self, imgDir):
		self.imgDir = imgDir

		aux = imgDir.split('/')		
		self.outImgName = aux[-1]

		self.img = Image.open(self.imgDir)
                self.isBlackAndWhite = False
		self.width = self.img.size[0]
		self.height = self.img.size[1]

	def getSize(self):
		return self.img.size

	def getMode(self):
		return self.img.mode

	def setOutName(self, imgName):
		self.outImgName = imgName

	def show(self):
		self.img.show()

	def save(self):
		self.img.save("../img/"+self.outImgName)
		
	def setColorGrayScale(self):
	    self.img = self.img.convert("L")
	    self.isBlackAndWhite = True

def sobel(self, pixels):
	"""
		| i=2 (-1)| i=5 (0)| i=4 (1)|
		| i=1 (-2)| i=0 (0)| i=3 (2)|
		| i=6 (-1)| i=7 (0)| i=8 (1)|
	"""
	self.pixelsDict = {1:-2, 2:-1, 3:2, 4:1, 5:0, 6:-1, 7:0, 8:1}
	x = 0.0
	for i in range(1, len(pixels)):
		#peso * valor
		x += self.pixelsDict[i] * pixels[i]


	"""
		| i=2 (-1)| i=5 (-2)| i=4 (-1)|
		| i=1 (0) | i=0 (0) | i=3 (0) |
		| i=6 (1) | i=7 (2) | i=8 (1) |
	"""
	self.pixelsDict = {1:0, 2:-1, 3:0, 4:-1, 5:-2, 6:1, 7:2, 8:1}
	y = 0.0
	for i in range(1, len(pixels)):
		y += self.pixelsDict[i] * pixels[i]

	ret = sqrt((x**2)+(y**2))
	return ret
